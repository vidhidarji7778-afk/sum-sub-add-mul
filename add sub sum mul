<!DOCTYPE html>
<html>
<head>
    <title>Simple Calculator</title>
</head>
<body>

    <h2>Simple Calculator</h2>

    <input type="number" id="num1" placeholder="Enter First Number">
    <input type="number" id="num2" placeholder="Enter Second Number">
    <br><br>

    <button onclick="calculate()">Calculate</button>

    <h3>Results:</h3>
    <p id="add"></p>
    <p id="sub"></p>
    <p id="mul"></p>
    <p id="div"></p>

    <script>
        function calculate() {
            let n1 = parseFloat(document.getElementById("num1").value);
            let n2 = parseFloat(document.getElementById("num2").value);

            document.getElementById("add").innerHTML = "Addition: " + (n1 + n2);
            document.getElementById("sub").innerHTML = "Subtraction: " + (n1 - n2);
            document.getElementById("mul").innerHTML = "Multiplication: " + (n1 * n2);
            document.getElementById("div").innerHTML = "Division: " + (n1 / n2);
        }
    </script>

</body>
</html>

